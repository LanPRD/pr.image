---
import { cn } from "@/utils/tailwind-merge";
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"input">;

const { class: Class, ...rest } = Astro.props;
---

<input
  class={cn(
    "flex h-10 w-full rounded-md border border-mauve-7 bg-mauve-2 px-3 py-2 text-sm ring-offset-accent-8 file:border-0 file:bg-transparent file:text-sm file:font-medium file:text-mauve-12 placeholder:text-mauve-9 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-mauve-12 focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50",
    Class
  )}
  {...rest}
/>
